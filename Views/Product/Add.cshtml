<div asp-validation-summary="All"></div>
<form method="post" enctype="multipart/form-data">
    <div>
        <label for="catId">Category</label>
        <div>
            <select name="categoryId" id="catId">
                @foreach (Category item in ViewBag.Categories)
                {
                    <option value="@item.CategoryId">@item.CategoryName</option>
                }
            </select>
        </div>
    </div>
    <div>
        <label for="name">Name</label>
        <div>
            <input type="text" name="name" required>
        </div>
    </div>
    <div>
        <label for="f">Image</label>
        <div>
            <input type="file" name="f" id="f" required accept="image">
        </div>
    </div>
    <div>
        <label for="des">Description</label>
        <div>
            <textarea type="text" name="description" id="des" required>123</textarea>
        </div>
    </div>
    <div>
        <label for="pri">Price</label>
        <div>
            <input type="number" step="0.01" min="0" name="price" id="pri" required>
        </div>
    </div>
    <div>
        <label for="qty">Quantity</label>
        <div>
            <input type="number" name="quantity" id="qty" required>
        </div>
    </div>
    <div>
        <label for="unit">Unit</label>
        <div>
            <select name="unit" id="unit">
                <option value="kg">Kg</option>
                <option value="cai">Cai</option>
                <option value="g">g</option>
            </select>
        </div>
    </div>
    <div>
        <button>
            Save changes
        </button>
    </div>
</form>