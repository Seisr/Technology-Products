@model Product
<div asp-validation-summary="All"></div>
<form method="post" enctype="multipart/form-data">
    <div>
        <label for="catId">Category</label>
        <div>
            <!-- naive-->
            <select name="categoryId" id="catId">
                @foreach (Category item in ViewBag.Categories)
                {
                    if (item.CategoryId == Model.CategoryId)
                    {
                        <option value="@item.CategoryId" selected>@item.CategoryName</option>
                    }
                    else
                    {
                        <option value="@item.CategoryId">@item.CategoryName</option>
                    }
                }
            </select>
        </div>
    </div>
    <div>
        <label for="name">Name</label>
        <div>
            <input type="text" name="name" required value="@Model.Name">
        </div>
    </div>
    <div>
        <label for="f">Image</label>
        <div>
            <input type="hidden" name="IMAGEUrl" value="@Model.IMAGEUrl">
            <input type="file" name="f" id="f" accept="image">
            <img src="/images/@Model.IMAGEUrl" alt="@Model.Name" width="240" />
        </div>
    </div>
    <div>
        <label for="des">Description</label>
        <div>
            <textarea type="text" name="description" id="des" required>@Model.Description</textarea>
        </div>
    </div>
    <div>
        <label for="pri">Price</label>
        <div>
            <input type="number" step="0.01" min="0" name="price" id="pri" required value="@Model.Price">
        </div>
    </div>
    <div>
        <label for="qty">Quantity</label>
        <div>
            <input type="number" name="quantity" id="qty" required value="@Model.Quantity">
        </div>
    </div>
    <div>
        <label for="unit">Unit</label>
        <div>
            <select name="unit" id="unit">
                <!-- naive-->
                @* <option value="kg">Kg</option>
                <option value="cai">Cai</option>
                <option value="g">g</option> *@
                @foreach (string item in ViewBag.Units)
                {
                    if (item == Model.Unit)
                    {
                        <option selected value="@item">@item</option>
                    }
                    else
                    {
                        <option value="@item">@item</option>
                    }
                    @* <option value="@item">@item</option> *@
                }
            </select>
        </div>
    </div>
    <div>
        <button>
            Save changes
        </button>
    </div>
</form>