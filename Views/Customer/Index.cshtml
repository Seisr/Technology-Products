@model List<Customer>


<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Gender</th>
            <th>Address</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CustomerId</td>
                <td>@item.CustomerName</td>
                <td>@item.Phone</td>
                <td>@item.Email</td>
                <td>@item.Gender</td>
                <td>@item.Address</td>
                <td>
                    <a href="/customer/delete/@item.CustomerId">Delete</a>
                    <a href="/customer/edit/@item.CustomerId">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<!-- Button trigger modal -->
<div class="d-flex justify-content-center">
    <button type="button" class="btn btn-primary " data-bs-toggle="modal" data-bs-target="#exampleModal">
        Add
    </button>
</div>
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <form method="post" action="/customer/add" class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title" id="exampleModalLabel">Add Customer</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-1 row">
                    <label class="form-label col-2" for="">Name</label>
                    <div class="col-10">
                        <input class="form-control" type="text" name="customerName" />
                    </div>
                </div>
                <div class="mb-1 row">
                    <label class="form-label col-2" for="">Email</label>
                    <div class="col-10">
                        <input class="form-control" type="email" name="email" />
                    </div>
                </div>
                <div class="mb-1 row">
                    <label class="form-label col-2 for="">Phone</label>
                    <div class=" col-10">
                        <input class="form-control" type="number" name="phone" />
                </div>
            </div>
            <div class="mb-1 row">
                <label class="form-label col-2 for="">Address</label>
                <div class=" col-10">
                    <input class="form-control" type="text" name="address" />
            </div>
    </div>
    <div class="mb-1 row">
        <label class="form-label col-2" for="gender">Gender</label>
        <div class=" col-10">
            <input class="form-check-input" type="checkbox" name="gender" value="true" />
        </div>
    </div>
</div>
<div class=" modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
    <button type="button" class="btn btn-primary">Save changes</button>
</div>
</form>
</div>
</div>